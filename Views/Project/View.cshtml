@model ProjectManagement.Models.ViewModels.UpdateProjectViewModel

@{
}

<br />
<h1>Edit Project</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Project ID</label>
        <input type="text" class="form-control" asp-for="ProjectID" readonly/>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Project Name</label>
        <input type="text" class="form-control" asp-for="ProjectName"/>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Project Status</label>
        <input type="text" class="form-control" asp-for="Status"/>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger"
            asp-action="Delete"
            asp-controller="Project">Delete</button>
</form>