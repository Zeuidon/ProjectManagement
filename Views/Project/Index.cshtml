@{
}

<br />
<h1>Project Menu</h1>
<a class='btn btn-primary btn-sm' href='/Project/Add'>Add Project</a>

<table class="table"> 
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Status</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.ProjectName</td>
                <td>@project.Status</td>
                <td><a href="Project/View/@project.ProjectID">View</a></td>
            </tr>
        }
    </tbody>
</table>